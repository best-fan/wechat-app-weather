/**index.wxss**/
view{
  overflow:auto;
}
/* ------- top city --------- */
.img_bac{
width:100%;
height:890rpx;
}
.top_city {
  display: flex;
  overflow: hidden;
  align-items: center;
  margin-top:-881rpx;

}

.city_list {
  display: flex; 
  align-content: center; 
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0 30rpx;
}

.city_item{
  color: #fff;
  width: 120px;
  font-size: 25rpx;
  padding-top: 5rpx;
}

.city_item_center {
  width: 100%;
  font-size: 30rpx;
  font-style: bold;
  padding-top: 0;
}
/* 滚动天气 */
.swiper_container {
  margin-left: 8px;
  margin-bottom: 15px;
  height: 55rpx;
  width: 90%;
}

.swiper_item {
  text-align: center;
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  margin-top: 5px;

  color: #fff;
}
/* ------- today --------- */

.today {
  padding: 90rpx 0 390rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.today .weather {
  display: flex;  
  padding-left: 30rpx;
}
.today .weather .pic {
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
}
.today .weather .desc{
  display: flex; 
  flex-direction: column; 
  margin-right: 20rpx;
}
.today .weather .desc text {
  color: #fff;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.today .temperature {
  color: #faf9fa;
  font-size: 120rpx;
  margin: 30rpx 0;
  padding-left:35rpx;
}
.today .more {
  color: #faf9fa;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}
.today .more text {
  padding: 0 10rpx;
}
.today-bottom {
background:#faf9fa;
height:300rpx;
border-radius:0%;
margin:25rpx  0 0 0;

}
.hourly {
  width:100%;
  height: 308rpx;
  white-space: nowrap; 
  display: flex; 
  background-color: white;
}
/*小时天气  */
.oneHourly {
  height: 100%;
  width: 150rpx;
  display: inline-block;  
  /* background-color: blue; */
  /* letter-spacing:4px;   */
  font-size:30rpx;  
}
.oneHourlyFlex {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-top: 10%;
  margin-bottom: 10%;
}
.hourlyDate {
  text-align: center;
  color: #4B4B4B;
  font-size: 30rpx;
  font-family: "SFUIDisplay-Regular";
}
.hourlyImg {
  width: 64rpx;
  height: 64rpx;
  text-align: center;
}
.hourlyTmp {
  text-align: center;
  color: #4B4B4B;
  font-size: 30rpx;
  font-family: "PingFangSC-Semibold";
}
.hourlyWind {
  text-align: center;
  color: #4B4B4B;
  font-size: 28rpx;
  font-family: "PingFangSC-Medium";
  display: flex;
  align-items: center;
  justify-content: center; 
}

.hourlyWind image {
  width: 16rpx;
  height: 28rpx;
  margin-right: 5rpx;
}
/*daily  */
.dailyForecast {
  margin-top: 40rpx; 
  font-family: "PingFangSC-Medium"; 
}
.daily {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: white;
  text-align: center;
}
.dailyDate {
   text-align: left; 
   width: 25%;
   color: #4B4B4B;
   font-size: 30rpx;
   margin-left: 5%;
}
.dailyImg {
  margin-left: 100rpx;
  margin-right: 40rpx;
  width: 64rpx;
  height: 80%;
}
.dailyCond {
   text-align: left; 
   width: 40%;
   color: #4B4B4B;
   font-size: 30rpx;
}
.dailyTmp {
   text-align: center; 
   width: 40%;
   font-size: 30rpx;
   font-family: "PingFangSC-Semibold";
}
.view_end{
font-size:25rpx;
margin-bottom:20rpx;
text-align:center;
margin-top:10rpx;
}